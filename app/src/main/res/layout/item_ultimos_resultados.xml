<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.25"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewLocalResultados"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/chelsea" />

            <TextView
                android:id="@+id/textViewNameLocalResultados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Equipo"
                android:textAlignment="center"
                android:textColor="@color/principal_blue"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewMarcador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="0.4"
            android:fontFamily="@font/roboto_bold"
            android:text="0 - 0"
            android:textColor="@color/principal_blue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.25"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewVisitResultados"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/chelsea" />

            <TextView
                android:id="@+id/textViewNameVisitResultados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Equipo"
                android:textAlignment="center"
                android:textColor="@color/principal_blue"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>